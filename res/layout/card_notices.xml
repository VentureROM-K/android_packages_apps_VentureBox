<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingRight="@dimen/card_horizontal_margin">
    
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/card_background"
            android:orientation="horizontal">
    
    <View
        android:id="@+id/bar"
	    android:layout_width="4dp"
	    android:layout_height="match_parent"
	    android:background="@color/actionbar_background" 
	    android:paddingRight="@dimen/card_separator_padding"/>

    <TextView
        android:id="@+id/tvNotice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/card_text"
        android:textSize="@dimen/card_small_text_size" 
        android:paddingLeft="@dimen/card_separator_padding"
        />
    </LinearLayout>
    
    <View
        android:id="@+id/barBottom"
	    android:layout_width="4dp"
	    android:layout_height="@dimen/card_separator_padding"
	    android:background="@color/actionbar_background" />

</LinearLayout>
