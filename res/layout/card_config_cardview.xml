<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/card_horizontal_margin"
    android:paddingRight="@dimen/card_horizontal_margin"
    android:id="@+id/llCardView"
    android:visibility="gone">

	<LinearLayout
    		android:layout_width="match_parent"
    		android:layout_height="match_parent"
    		android:orientation="horizontal">

		<TextView
        		android:id="@+id/tvCardViewLabel"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:textColor="@color/card_text"
			android:textSize="@dimen/card_small_text_size"/>

		<View
            		android:layout_width="0dp"
            		android:layout_height="0dp"
            		android:layout_weight="1"/>           

    		<Switch
        		android:id="@+id/cardview_enable"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"/>

	</LinearLayout>

	<TextView
        		android:id="@+id/tvCardViewDesc"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:textColor="@color/card_text"
			android:textSize="@dimen/card_small_text_size" 
			android:text="@string/cardviewdesc"
        		android:paddingBottom="@dimen/card_separator_padding"/>

</LinearLayout>
